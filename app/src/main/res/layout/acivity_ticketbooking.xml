    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow>

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_weight="1"
                android:text="Normal Seat" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/VIPSeat" />

            <TextView
                android:layout_weight="1"
                android:text="VIP Seat" />
        </TableRow>

        <TableRow>

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/CoupleSeat" />

            <TextView
                android:layout_weight="1"
                android:text="Couple Seat" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/OccupiedSeat" />

            <TextView
                android:layout_weight="1"
                android:text="Occupied" />
        </TableRow>
    </TableLayout>
