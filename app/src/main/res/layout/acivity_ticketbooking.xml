                android:text="C8"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/D1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="D1"
